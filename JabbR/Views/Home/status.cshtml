@using SquishIt.Framework;
@using JabbR
@using JabbR.Services
@model StatusViewModel

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8" />
    <title>JabbR - status</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @{
        WriteLiteral(Bundle.Css()
            .Add("~/Content/bootstrap.min.css")
            .Add("~/Content/bootstrap-responsive.min.css")
            .Add("~/Content/font-awesome.min.css")
            .Add("~/Content/themes/default/Chat.css")
            .Add("~/Content/emoji20.css")
            .Render("~/Content/JabbR_#.css"));
    }
</head>
<body class="administration">
    <section id="page" role="application">
        <header id="heading" role="heading">
            <div class="banner" role="banner">
                <h1>JabbR Status</h1>
            </div>
        </header>
        <div class="container">
            <div class="row" style="padding-top: 75px;">
                <div class="row">
                    <div class="span12">
                        <span class="administration-title pull-left">Status - @(Model.AllOK ? "All systems go!" : "Some errors :(")</span>
                    </div>
                </div>
                <hr />
            </div>
            
            <table class="table">
                <thead>
                    <tr><th>System</th><th>Status</th></tr>
                </thead>
                <tbody>
                @foreach (JabbR.ViewModels.SystemStatus system in Model.Systems) {
                    <tr>
                        <td>@system.SystemName</td>
                        <td class="@system.StatusCssClass"><strong>@system.StatusMessage</strong></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </section>
    <script src="@Url.Content("~/Scripts/jquery-2.0.3.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
</body>
</html>
